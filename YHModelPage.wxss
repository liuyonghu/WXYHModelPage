/* libs/ModelPage/YHModelPage.wxss */

.backgroundView {
    position: absolute;
    width: 100%;
    /* height: 100%; */
    opacity: 0;
    background: rgba(0, 0, 0, 0.6);
    z-index: 200;
}

.mainInfoView {
    position: absolute;
    left: 50%;
    top: 60px;
    transform: translateX(-50%);
    /* transform: translateY(-50%); *//* transform: translate(-50%, -50%); */
    width: 80%;
    height: 70%;
    background-color: white;
    /* bottom: 50px; */
    box-shadow: 1px 1px 1px gray;
    z-index: 201;
    overflow-x: scroll;
    white-space: nowrap;
    display: flex;
}

.ImageItem {
    float: left;
    flex-shrink: 0;
    width: 100%;
    height: 100%;
}

.closeButton {
    position: absolute;
    top: 15px;
    right: 15px;
    padding: 10px;
    height: 44px;
    width: 44px;
    z-index: 200;
}

.closeButtonTitle {
    border: 1px solid #287fe8;
    color: #287fe8;
    height: 100%;
    width: 100%;
    text-align: center;
    font-size: 25px;
    line-height: 18px;
    border-radius: 6px;
}

.YHModelPageTitle {
    color: white;
    background-color: #378bf1;
    width: 100%;
    left: 0px;
    text-align: center;
    font-weight: blod;
    font-size: 1.35rem;
    line-height: 50px;
    height: 50px;
    top: 0px;
    position: absolute;
    /* border-bottom: 1px solid #287fe8; */
}

.YHModelPageContent {
    position: absolute;
    top: 50px;
    width: 100%;
    bottom: 60px;
    /* padding: 40px; */
    padding-left: 1.5rem;
    padding-right: 1.5rem;
    overflow-y: scroll;
}

.YHModelPageContentItem {
    margin-top: 10px;
    margin-left: 0px;
    /* width: auto; */
    width: 100%;
    text-align: left;
    height: auto;
    display: flex;
    /* justify-content: space-between; */
}

.itemTitle {
    margin: 0px;
    padding: 0px;
    width: 5rem;
    height: auto;
    font-weight: bold;
    font-size: 0.9rem;
    white-space: pre-wrap;
    word-wrap: normal;
    color: #287fe8;
    text-align: left;
}

.itemContent {
    height: auto;
    width: 100%;
    margin: 0px;
    padding: 0px;
    font-size: 0.85rem;
    word-wrap: normal;
    white-space: pre-wrap;
    color: #000;
    text-align: right;
    max-width: 280rpx;

}

.confrimButtonContainer {
    position: absolute;
    bottom: 0px;
    left: 0px;
    height: 60px;
    width: 100%;
    border-top: 1px solid lightgray;
}

.confrimButton {
    position: absolute;
    bottom: 5px;
    left: 50%;
    transform: translateX(-50%);
    padding: 3px;
    height: 44px;
    width: auto;
    z-index: 200;
}

.confrimButtonTitle {
    border: 1px solid #287fe8;
    color: white;
    background-color: #287fe8;
    height: 100%;
    width: 100%;
    text-align: center;
    font-size: 20px;
    line-height: 18px;
    border-radius: 6px;
    padding: 8px;
    padding-left: 16px;
    padding-right: 16px;
}
